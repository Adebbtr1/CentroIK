{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "src/types"],
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts"
, "backend/server.ts"  ],
  
  "exclude": [
    "node_modules"
  ]
}

